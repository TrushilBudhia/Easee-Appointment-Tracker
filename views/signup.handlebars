<div class="row justify-space-between-md box">
  <label class="label is-medium has-arrow-separator">Signup:</label>
  <form class="form signup-form">
    <div class="field">
      <label class="label">Username:</label>
      <p class="control has-icons-left">
        <input class="input" id="username-signup" type="text" placeholder="Username">
        <span class="icon is-small is-left">
          <i class="fas fa-user"></i>
        </span>
      </p>
    </div>
    <div class="field">
      <label class="label">Email:</label>
      <p class="control has-icons-left">
        <input class="input" id="email-signup" type="email" placeholder="Email">
        <span class="icon is-small is-left">
          <i class="fas fa-envelope"></i>
        </span>
      </p>
    </div>
    <div class="field">
      <label class="label">Password:</label>
      <p class="control has-icons-left">
        <input class="input" id="password-signup" type="password" placeholder="Password">
        <span class="icon is-small is-left">
          <i class="fas fa-lock"></i>
        </span>
      </p>
    </div>
    <div class="field">
      <p class="control">
        <button class="button signup is-info px-5" type="submit">Signup</button>
      </p>
    </div>
    <p class="is-size-5">Already have an account? <a href="/login">Login</a></p>
  </form>
</div>

<script src="./js/signup.js"></script>