<link rel="stylesheet" href="/flatpickr/flatpickr.css">
<link rel="stylesheet" href="/flatpickr/themes/light.css">
<section>
    <section class="success-message box is-block has-text-centered mx-3 notification is-success is-hidden">
        <h4 class="is-size-5 mb-2">Appointment added</h4>
        <button class="add-appointment button is-link is-light my-2">Add another Appointment</button>
        <button class="dashboard button is-link is-light my-2">Return to dashboard</button>
    </section>
    <section class="appointment-date box is-block mx-3">
        <h3 class="has-text-grey-dark is-size-3">Add Appointment</h3>
        <form>
            <div class="is-size-5 my-4 field">
                <label class="has-text-weight-semibold label" for="appointment-date">Appointment Date:</label>
                <input type="text" class="input is-info" id="appointment-date" placeholder="Appointment Date" data-input>
            </div>
            <div class="is-size-5 my-4 field">
                <label class="has-text-weight-semibold label" for="appointment-time">Appointment Time:</label>
                <input type="text" class="input is-info" id="appointment-time" placeholder="Appointment Time" data-input>
            </div>
            <div class="is-size-5 my-4 field">
                <label class="has-text-weight-semibold label" for="appointment-whom">Appointment For:</label>
                <div class="control has-icons-left">
                    <input type="text" class="input is-info" id="appointment-whom" name="appointment-whom"
                        placeholder="Enter Who the Appointment is For" list="appnts_for_whom">
                    <datalist id="appnts_for_whom">
                        {{#each appointmentsForWhomUnique }}
                        <option value="{{this}}"></option>
                        {{/each}}
                    </datalist>
                    <span class="icon is-small is-left">
                        <i class="fas fa-user"></i>
                    </span>
                </div>
            </div>
            <div class="is-size-5 my-4 field">
                <label class="has-text-weight-semibold label" for="appointment-with">Appointment With:</label>
                <div class="control has-icons-left">
                    <input type="text" class="input is-info" id="appointment-with" name="appointment-with"
                        placeholder="Enter Who the Appointment is With" list="appnts_with_whom">
                    <datalist id="appnts_with_whom">
                        {{#each appointmentsWithWhomUnique}}
                        <option value="{{this}}"></option>
                        {{/each}}
                    </datalist>
                    <span class="icon is-small is-left">
                        <i class="fas fa-user"></i>
                    </span>
                </div>
            </div>
            <div class="is-size-5 my-4 field">
                <label class="has-text-weight-semibold label" for="appointment-location">Appointment Location:</label>
                <div class="control has-icons-left">
                    <input type="text" class="input is-info" id="appointment-location" name="appointment-location"
                        placeholder="Enter Address of Appointment" list="appnts_location">
                    <datalist id="appnts_location">
                        {{#each appointmentsLocationUnique}}
                        <option value="{{this}}"></option>
                        {{/each}}
                    </datalist>
                    <span class="icon is-small is-left">
                        <i class="fas fa-map-marker"></i>
                    </span>
                </div>
            </div>
            <div id="map"></div>
            <div class="is-size-5 my-4 field">
                <label class="has-text-weight-semibold label" for="appointment-notes">Notes:</label>
                <textarea type="text" class="textarea is-info" id="appointment-notes" name="appointment-notes"
                    placeholder="Notes"></textarea>
            </div>

            <div class="form-group">
                <button class="button is-success px-6" id="add-appointment-button" type="submit">Add</button>
            </div>
            <div class="error-message notification is-danger my-4 is-hidden">
                Enter details for:
                <ul class="error"></ul>
            </div>
        </form>
    </section>
</section>
<script src="/flatpickr/flatpickr.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"></script>
<script type="text/javascript"
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC856BBT5rwwkraEtK2Ki5obfAUgw1M2KQ&libraries=places&v=weekly"></script>
<script src="/../js/googleMapsAPi.js"></script>
<script src="/../js/add-new-appointment.js"></script>